<% include partials/header.ejs %>
    <div class="row" style="width: 1350px;">
        <div class="col-md-1" style="margin-right: 200px; ">
            <nav id="sidebar" style="position: fixed;">
                <div class="sidebar-header" style="margin-top: 50px;">
                    <h4>PT . Sinar Tambang</h4>
                </div>
                <ul class="list-unstyled CTAs" style="margin-top: 350px;">
                    <li>
                        <a href="https://www.semenbima.com/" class="download">Website</a>
                    </li>
                    <li>
                        <a href="https://goo.gl/maps/MZEjL333ijWPW4457" class="article">Alamat</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-md-9" style="margin-top: 50px;">
            <div class="table-wrapper">

                <% if (players.length > 0) { %>
                    <table class="table table-hovered">

                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Image</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Jenis Kelamin</th>
                                <th scope="col">Alamat</th>
                                <th scope="col">Email</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% players.forEach((player, index) => { %>
                                <tr>
                                    <th scope="row">
                                        <%= player.id %>
                                    </th>
                                    <td><img src="/assets/img/<%= player.image %>" class="rounded-circle player-img" alt=""></td>
                                    <td>
                                        <%= player.user_name %>
                                    </td>
                                    <td>
                                        <%= player.last_name %>
                                    </td>
                                    <td>
                                        <%= player.first_name %>
                                    </td>

                                    <td>
                                        <%= player.position %>
                                    </td>

                                    <td>
                                        <a href="player/edit/<%= player.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                        <a href="player/delete/<%= player.id %>" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>

                    <% } else { %>
                        <p class="text-center">No data found. Go <a href="/player/add">here</a> to add new data.</p>
                        <% } %>
            </div>
        </div>
    </div>

    </div>

    </body>


    </html>